<script>
    // Get the toggle button and the body element
    const themeToggleBtn = document.getElementById('theme-toggle');
    const body = document.body;

    // Function to toggle the theme
    function toggleTheme() {
        if (body.getAttribute('data-bs-theme') === 'dark') {
            body.setAttribute('data-bs-theme', 'light');
            themeToggleBtn.textContent = 'Dark Mode';
        } else {
            body.setAttribute('data-bs-theme', 'dark');
            themeToggleBtn.textContent = 'Light Mode';
        }
        // Save theme preference to localStorage
        localStorage.setItem('theme', body.getAttribute('data-bs-theme'));
    }

    // Event listener for the toggle button
    themeToggleBtn.addEventListener('click', toggleTheme);

    // Load theme preference from localStorage on page load
    (function () {
        const savedTheme = localStorage.getItem('theme');
        if (savedTheme) {
            body.setAttribute('data-bs-theme', savedTheme);
            themeToggleBtn.textContent = savedTheme === 'dark' ? 'Light Mode' : 'Dark Mode';
        }
    })();
</script>