@model Animal
@{
    ViewData["Title"] = "Details";
}

<div class="row">
    <div class="col-sm">
        <div class="card" style="width: 100%;">
            <img src="@Url.Content(Model.ImageUrl)" class="card-img-top" alt="@Model.Name">
            <div class="card-body">
                <h4 class="card-title">Age: @Model.Age</h4>
                <h4 class="card-title">Name: @Model.Name</h4>
                <h4 class="card-title">Category: @Model.Category.Name</h4>
                <h4 class="card-text">Description:</h4>
                <p>@Model.Description</p>
            </div>
        </div>
    </div>

    <div class="col-sm">
        <h3>Leave a Comment</h3>
        <form class="row" asp-action="AddComment" method="post">
            <input type="hidden" name="AnimalId" value="@Model.AnimalId" />
            <div class="col-12 mb-2">
                <textarea class="form-control" name="Content" placeholder="Your comment" rows="3" required></textarea>
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-primary">Post</button>
            </div>
        </form>

        <h3 class="mt-4">Comments</h3>
        <table class="table table-striped table-hover">
            <tbody>
                @foreach (var com in Model.Comments)
                {
                    <tr>
                        <td>
                            <p>@com.Content</p>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
